<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    android:padding="20dp">


    <!-- Title -->

    <!-- Subtitle -->

    <TextView
        android:id="@+id/tvJoinTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Join Fitness Glory Today"
        android:textColor="@color/accentColor"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvJoinSub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start your personalized fitness experience."
        android:textColor="@color/white70"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvJoinTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

    <!-- Email label -->
    <TextView
        android:id="@+id/lblEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textColor="@color/accentColor"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvJoinSub"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Email field (icon & text no longer overlap) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilEmail"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:startIconDrawable="@drawable/ic_mail_24"
        app:startIconTint="@color/white70"
        app:boxBackgroundColor="@color/surfaceDark"
        app:boxStrokeColor="@color/white30"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:placeholderText="@string/hint_email"
        app:placeholderTextColor="@color/white70"
        app:layout_constraintTop_toBottomOf="@id/lblEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/accentColor"
            android:textColorHint="@color/white70"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Password label -->
    <TextView
        android:id="@+id/lblPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textColor="@color/accentColor"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tilEmail"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Password field with toggle (icon & text no longer overlap) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPassword"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:startIconDrawable="@drawable/ic_lock_24"
        app:startIconTint="@color/white70"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/white70"
        app:boxBackgroundColor="@color/surfaceDark"
        app:boxStrokeColor="@color/white30"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:placeholderText="@string/hint_password"
        app:placeholderTextColor="@color/white70"
        app:layout_constraintTop_toBottomOf="@id/lblPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:inputType="textPassword"
            android:textColor="@color/accentColor"
            android:textColorHint="@color/white70"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Terms row -->
    <LinearLayout
        android:id="@+id/termsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tilPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cbAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/secondaryColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" I agree to Fitness Glory "
            android:textColor="@color/accentColor"/>

        <TextView
            android:id="@+id/tvTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms &amp; Conditions."
            android:textColor="@color/secondaryColor"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- Already have account -->
    <LinearLayout
        android:id="@+id/loginLinkRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/termsRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "
            android:textColor="@color/white70"/>

        <TextView
            android:id="@+id/tvLoginLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_in"
            android:textColor="@color/secondaryColor"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- Divider with "or" -->
    <View
        android:id="@+id/dividerLeft"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white30"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/loginLinkRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvOr"/>

    <TextView
        android:id="@+id/tvOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/or"
        android:textColor="@color/white70"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/loginLinkRow"
        app:layout_constraintStart_toEndOf="@id/dividerLeft"
        app:layout_constraintEnd_toStartOf="@id/dividerRight"/>

    <View
        android:id="@+id/dividerRight"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white30"
        app:layout_constraintTop_toTopOf="@id/dividerLeft"
        app:layout_constraintBottom_toBottomOf="@id/dividerLeft"
        app:layout_constraintStart_toEndOf="@id/tvOr"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Social: Google -->

    <!-- Social: Apple -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoogle"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/continue_google"
        android:textColor="@color/accentColor"
        app:cornerRadius="26dp"
        app:icon="@drawable/search"
        app:iconGravity="start"
        app:iconPadding="0dp"
        app:iconSize="20dp"
        app:iconTint="@color/accentColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dividerRight"
        app:strokeColor="@color/white30"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnApple"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:text="@string/continue_apple"
        android:textColor="@color/accentColor"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:icon="@drawable/apple"
        app:iconTint="@color/accentColor"
        app:iconPadding="0dp"
        app:iconSize="20dp"
        app:iconGravity="start"
        app:strokeColor="@color/white30"
        app:strokeWidth="1dp"
        app:cornerRadius="26dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnGoogle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom Sign up CTA (yellow) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignUpSubmit"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/sign_up"
        android:textStyle="bold"
        android:textColor="@color/primaryColor"
        android:backgroundTint="@color/secondaryColor"
        app:cornerRadius="28dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintTop_toBottomOf="@id/btnApple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="27dp"
        android:layout_height="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/arrow" />



</androidx.constraintlayout.widget.ConstraintLayout>
