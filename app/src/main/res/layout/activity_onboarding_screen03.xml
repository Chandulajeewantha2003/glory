<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor">

    <!-- App Name -->
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:text="Fitness Glory"
        android:textColor="@color/accentColor"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Illustration -->
    <ImageView
        android:id="@+id/illustration"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/onboard2"
        android:contentDescription="Workout Illustration"
        app:layout_constraintTop_toBottomOf="@id/appName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <!-- Title (feel free to change text for screen 3) -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Own Your Glory"
        android:textColor="@color/accentColor"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/illustration" />

    <!-- Description -->

    <!-- Slide Indicators (third/right active) -->
    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="No shortcuts, just steady work. Beat yesterday by 1% today, and let weeks of consistency compound into strength, discipline, and pride."
        android:textColor="@color/accentColor"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <LinearLayout
        android:id="@+id/slideIndicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintBottom_toTopOf="@id/skipButton"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp">

        <!-- first inactive -->
        <View
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/indicator_inactive"/>

        <!-- middle inactive -->
        <View
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/indicator_inactive"/>

        <!-- third active -->
        <View
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:background="@drawable/indicator_active"/>
    </LinearLayout>

    <!-- Skip Button -->
    <Button
        android:id="@+id/skipButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:backgroundTint="@color/secondaryColor"
        android:text="START"
        android:textAllCaps="true"
        android:textColor="@color/primaryColor"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
