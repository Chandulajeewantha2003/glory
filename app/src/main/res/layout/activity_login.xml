<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoMark"
        android:layout_width="245dp"
        android:layout_height="114dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Let’s Get Started!"
        android:textColor="@color/accentColor"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoMark" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sign in or create your Fitness Glory account"
        android:textColor="@color/accentColor"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <!-- Social buttons (icons aligned left) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoogle"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/continue_google"
        android:textColor="@color/accentColor"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:icon="@drawable/search"
        app:iconTint="@color/accentColor"
        app:iconPadding="0dp"
        app:iconSize="20dp"
        app:iconGravity="start"
        app:strokeColor="@color/accentColor"
        app:strokeWidth="1dp"
        app:cornerRadius="28dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnApple"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/continue_apple"
        android:textColor="@color/accentColor"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:icon="@drawable/apple"
        app:iconTint="@color/accentColor"
        app:iconPadding="0dp"
        app:iconSize="20dp"
        app:iconGravity="start"
        app:strokeColor="@color/accentColor"
        app:strokeWidth="1dp"
        app:cornerRadius="28dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnGoogle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFacebook"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/continue_facebook"
        android:textColor="@color/accentColor"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:icon="@drawable/facebook"
        app:iconTint="@color/accentColor"
        app:iconPadding="0dp"
        app:iconSize="20dp"
        app:iconGravity="start"
        app:strokeColor="@color/accentColor"
        app:strokeWidth="1dp"
        app:cornerRadius="28dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnApple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTwitter"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/continue_twitter"
        android:textColor="@color/accentColor"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:icon="@drawable/twitter"
        app:iconTint="@color/accentColor"
        app:iconPadding="0dp"
        app:iconSize="20dp"
        app:iconGravity="start"
        app:strokeColor="@color/accentColor"
        app:strokeWidth="1dp"
        app:cornerRadius="28dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnFacebook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Primary action (yellow) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignUp"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/sign_up"
        android:textStyle="bold"
        android:textColor="@color/primaryColor"
        android:backgroundTint="@color/secondaryColor"
        app:cornerRadius="28dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnTwitter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Secondary action (dark) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/log_in"
        android:textColor="@color/accentColor"
        android:backgroundTint="@color/surfaceDark"
        app:cornerRadius="28dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnSignUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Footer links -->
    <LinearLayout
        android:id="@+id/footerLinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tvPrivacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/privacy_policy"
            android:textColor="@color/accentColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  ·  "
            android:textColor="@color/accentColor"/>

        <TextView
            android:id="@+id/tvTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terms_of_service"
            android:textColor="@color/accentColor"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
